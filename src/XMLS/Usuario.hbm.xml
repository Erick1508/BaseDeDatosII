<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">   

<hibernate-mapping package="clases">

<class name="Usuario" table="USUARIO">
  
    <id name="login" column="LOGIN"></id>
    
    <property name="apellido" column="apellido"/>
    <property name="password" column="password"/>
    <property name="email" column="email"/>
    <property name="veces_accedidas" column="veces_accedidas"/>
    <property name="ult_vez_online" column="ult_vez_online"/>
    
    <!-- esta parte es para la asociacion amigos 1 -> muchos (quizas sea *->*--> 
    <many-to-one name="persona" class="Usuario" column="nombre"
            not-null="false"/>
            
    <set name="amigos" table="Usuario" lazy="false" inverse="false">
              <key column="nombre"/>
              <one-to-many class="Usuario" />
     </set>
     
</class>

</hibernate-mapping>